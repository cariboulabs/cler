{
  "name": "cler-flowgraph-preview",
  "displayName": "Cler Flowgraph Preview",
  "description": "Live Mermaid preview for Cler C++ flowgraphs",
  "version": "1.0.0",
  "publisher": "cler",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onCommand:cler.openPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cler.openPreview",
        "title": "Open Cler Flowgraph Preview",
        "icon": "$(graph)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == cpp",
          "command": "cler.openPreview",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Cler Flowgraph",
      "properties": {
        "cler.toolPath": {
          "type": "string",
          "default": "",
          "description": "Path to cler-mermaid executable (leave empty to use PATH or bundled version)"
        },
        "cler.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update preview on file changes"
        },
        "cler.updateDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before updating preview after changes"
        },
        "cler.lightModeTheme": {
          "type": "string",
          "enum": ["default", "neutral", "dark", "forest", "base"],
          "default": "default",
          "description": "Mermaid theme for light color themes"
        },
        "cler.darkModeTheme": {
          "type": "string",
          "enum": ["default", "neutral", "dark", "forest", "base"],
          "default": "dark",
          "description": "Mermaid theme for dark color themes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  }
}
